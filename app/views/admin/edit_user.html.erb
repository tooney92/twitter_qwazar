<h1>waddup!</h1>

<%= form_with scope: :user, url: users_path+"/admin/edit_user/#{@id}",  local: true,  method: :post do |form| %>
<p>
  <%= form.label :username %><br>
  <%= form.text_field :user_name, :class => "form-control", placeholder: "#{@username}", :required => true%>
</p>

<p>
  <%= form.label :email %><br>
  <%= form.email_field :email, :class => "form-control", :rows => "9", placeholder: "#{@email}", :required => true %>
</p>


<p>
  <%= form.submit "update", :class => "btn, btn-primary" %>
</p>

<% end %>